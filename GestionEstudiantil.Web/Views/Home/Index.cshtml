@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold mb-3">Bienvenido a Gestión Estudiantil</h1>
    <p class="lead mb-4">Administra fácilmente estudiantes, asignaturas e inscripciones.</p>

    <div class="d-flex justify-content-center gap-3 flex-wrap mb-5">
        <a asp-controller="Estudiantes" asp-action="Index" class="btn btn-outline-primary btn-lg shadow">
            <i class="bi bi-people-fill me-2"></i> Estudiantes
        </a>
        <a asp-controller="Asignaturas" asp-action="Index" class="btn btn-outline-success btn-lg shadow">
            <i class="bi bi-journal-bookmark-fill me-2"></i> Asignaturas
        </a>
        <a asp-controller="EstudianteAsignaturas" asp-action="Index" class="btn btn-outline-info btn-lg shadow">
            <i class="bi bi-link-45deg me-2"></i> Relaciones
        </a>
    </div>

    <div class="mt-4">
        <img src="https://b2bmarketplace.procolombia.co/sites/default/files/styles/max_325x325/public/companies/Logo%20%281%29.png"
             alt="Logo" width="140" height="140" class="rounded-circle shadow mb-3" />
        <p class="text-muted">Desarrollado por <strong>Santiago Vélez Zapata</strong></p>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
