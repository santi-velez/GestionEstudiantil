@model GestionEstudiantil.Dominio.Entidades.EstudianteAsignatura

@{
    ViewData["Title"] = "Crear Relación Estudiante - Asignatura";
}

<h1 class="mb-4 text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <h4 class="card-title mb-4 text-primary">
                    <i class="bi bi-person-plus-fill me-2"></i>Relacionar Estudiante con Asignatura
                </h4>

                <!-- Alerta de errores -->
                @if (!ViewData.ModelState.IsValid)
                {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                    <div>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                        <p class="mb-0">@error.ErrorMessage</p>
                            }
                    </div>
                </div>
                }

                <form asp-action="Create">
                    <div class="form-group mb-3">
                        <label asp-for="EstudianteId" class="form-label">Estudiante</label>
                        <select asp-for="EstudianteId" class="form-select" asp-items="ViewBag.EstudianteId"></select>
                        <span asp-validation-for="EstudianteId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="AsignaturaId" class="form-label">Asignatura</label>
                        <select asp-for="AsignaturaId" class="form-select" asp-items="ViewBag.AsignaturaId"></select>
                        <span asp-validation-for="AsignaturaId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-save-fill me-1"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle-fill me-1"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- Auto ocultar alertas -->
    <script>
        setTimeout(() => {
            const alert = document.querySelector('.alert-danger');
            if (alert) {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.remove(), 500);
            }
        }, 4000);
    </script>

    <!-- Bootstarp -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
