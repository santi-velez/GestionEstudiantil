@model IEnumerable<GestionEstudiantil.Dominio.Entidades.EstudianteAsignatura>

    @{
    ViewData["Title"] = "Relación Estudiantes - Asignaturas";
    }

    <h1 class="mb-4">@ViewData["Title"]</h1>

    <a asp-action="Create" class="btn btn-primary mb-4">
        <i class="bi bi-plus-circle-fill me-1"></i> Nueva Relación
    </a>

    @if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        No hay relaciones registradas.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-fill text-primary me-1"></i>
                        @item.Estudiante?.Nombre
                    </h5>
                    <p class="card-text mb-1">
                        <i class="bi bi-journal-text me-1 text-secondary"></i>
                        <strong>Asignatura:</strong> @item.Asignatura?.Nombre
                    </p>
                    <p class="card-text">
                        <i class="bi bi-award-fill me-1 text-warning"></i>
                        <strong>Créditos:</strong> @item.Asignatura?.Creditos
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-estudianteId="@item.EstudianteId" asp-route-asignaturaId="@item.AsignaturaId" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-estudianteId="@item.EstudianteId" asp-route-asignaturaId="@item.AsignaturaId" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-info-circle-fill"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-estudianteId="@item.EstudianteId" asp-route-asignaturaId="@item.AsignaturaId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
        }
    </div>
}
