@model IEnumerable<GestionEstudiantil.Dominio.Entidades.Estudiante>

    @{
    ViewData["Title"] = "Estudiantes";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary shadow">
            <i class="bi bi-person-plus-fill me-1"></i> Agregar Estudiante
        </a>
    </div>

    @if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle-fill me-2"></i> No hay estudiantes registrados.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Correo</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var estudiante in Model)
                {
                <tr>
                    <td>@estudiante.Nombre</td>
                    <td>@estudiante.DocumentoIdentidad</td>
                    <td>@estudiante.CorreoElectronico</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@estudiante.Id" class="btn btn-sm btn-outline-warning me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@estudiante.Id" class="btn btn-sm btn-outline-info me-1">
                            <i class="bi bi-eye-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@estudiante.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
